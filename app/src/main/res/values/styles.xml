<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Moe.Chip.Genre" parent="Widget.Material3.Chip.Suggestion.Elevated">
        <item name="chipBackgroundColor">@color/colorSecondary</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="textAppearanceTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="textBodyPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="textBodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
</resources>