<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MoeChipGenre" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="chipMinHeight">20dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
<!--        <item name="android:textAppearance">@style/textBodyPrimary</item>-->
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="MoeSearchBar" parent="ShapeAppearanceOverlay.Material3.SearchBar">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.SearchBar</item>
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="hintEnabled">true</item>
        <item name="android:hint">What are you looking for?</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="endIconMinSize">10dp</item>
        <item name="startIconContentDescription">search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/round_search_24</item>
        <item name="startIconDrawable">@drawable/round_sort_24</item>
    </style>


    <style name="textAppearanceTitle" parent="TextAppearance.Material3.TitleLarge">
<!--        <item name="android:textColor">@color/textColorPrimary</item>-->
    </style>

    <style name="textBodyPrimary" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">12sp</item>
<!--        <item name="android:textColor">@color/textColorSecondary</item>-->
    </style>

    <style name="textBodySecondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">12sp</item>
<!--        <item name="android:textColor">@color/textColorSecondary</item>-->
    </style>
</resources>